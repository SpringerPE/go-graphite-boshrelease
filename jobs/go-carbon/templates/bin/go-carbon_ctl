#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/go-carbon/helpers/ctl_setup.sh 'go-carbon'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE_GO_CARBON ${JOB_NAME}_go-carbon

    # store pid in $PIDFILE
    echo $$ > $PIDFILE_GO_CARBON

    exec chpst -u vcap:vcap /var/vcap/jobs/go-carbon/packages/go-carbon/bin/go-carbon \
         -config="/var/vcap/jobs/go-carbon/config/go-carbon.conf" \
         -config-print-default=false \
         -daemon=true \
         >>$LOG_DIR/$LOG_FILE_GO_CARBON 2>&1

    ;;

  stop)
    kill_and_wait $PIDFILE_GO_CARBON

    ;;
  *)
    echo "Usage: go-carbon_ctl {start|stop}"

    ;;

esac
exit 0
