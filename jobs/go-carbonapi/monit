check process carbonapi
  with pidfile /var/vcap/sys/run/go-carbonapi/carbonapi.pid
  start program "/var/vcap/jobs/go-carbonapi/bin/monit_debugger carbonapi_ctl '/var/vcap/jobs/go-carbonapi/bin/carbonapi_ctl start'"
  stop program "/var/vcap/jobs/go-carbonapi/bin/monit_debugger carbonapi_ctl '/var/vcap/jobs/go-carbonapi/bin/carbonapi_ctl stop'"
  group vcap

check process carbonzipper 
  with pidfile /var/vcap/sys/run/go-carbonapi/carbonzipper.pid
  start program "/var/vcap/jobs/go-carbonapi/bin/monit_debugger carbonzipper_ctl '/var/vcap/jobs/go-carbonapi/bin/carbonzipper_ctl start'"
  stop program "/var/vcap/jobs/go-carbonapi/bin/monit_debugger carbonzipper_ctl '/var/vcap/jobs/go-carbonapi/bin/carbonzipper_ctl stop'"
  group vcap
